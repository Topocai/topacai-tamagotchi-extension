{
  "manifest_version": 3,
  "name": "Topacai tamagotchi",
  "author": "topocaidev@gmail.com",
  "version": "0.0.1",
  "description": "Simple cat tamagotchi",
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "icons": {
    "512": "./assets/icon.png"
  },
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": "./assets/icon.png"
  },
  "permissions": ["activeTab", "storage"]
}
